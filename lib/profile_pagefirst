import 'package:flutter/material.dart';

class SideNavbar extends StatelessWidget {
  const SideNavbar({super.key});

  @override
  Widget build(BuildContext context) {
    return Drawer(
      // Customizing the shape to match the rounded corner in the image
      shape: const RoundedRectangleBorder(
        borderRadius: BorderRadius.only(
          topRight: Radius.circular(50),
          bottomRight: Radius.circular(0),
        ),
      ),
      child: Column(
        children: [
          // Header Section
          Container(
            padding: const EdgeInsets.only(top: 60, left: 20, bottom: 30),
            width: double.infinity,
            decoration: const BoxDecoration(
              color: Colors.white,
              borderRadius: BorderRadius.only(topRight: Radius.circular(50)),
            ),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                // Back Button
                GestureDetector(
                  onTap: () => Navigator.pop(context),
                  child: Row(
                    children: const [
                      Icon(Icons.arrow_back_ios, size: 16, color: Colors.grey),
                      SizedBox(width: 5),
                      Text("Back", style: TextStyle(color: Colors.grey, fontSize: 16)),
                    ],
                  ),
                ),
                const SizedBox(height: 30),
                // Profile Section
                Row(
                  children: [
                    const CircleAvatar(
                      radius: 40,
                      backgroundColor: Color(0xFFE0F2F1), // Light teal background
                      child: CircleAvatar(
                        radius: 36,
                        backgroundImage: AssetImage('assets/avatar.png'), // Replace with your asset
                      ),
                    ),
                  ],
                ),
                const SizedBox(height: 15),
                const Text(
                  "Saman karunaratne",
                  style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                ),
                const Text(
                  "saman@email.com",
                  style: TextStyle(color: Colors.grey, fontSize: 14),
                ),
              ],
            ),
          ),
          
          const Divider(height: 1),

          // Navigation Items
          Expanded(
            child: ListView(
              padding: EdgeInsets.zero,
              children: [
                _buildDrawerItem(Icons.history, "History"),
                _buildDrawerItem(Icons.chat_bubble_outline, "Complain"),
                _buildDrawerItem(Icons.group_outlined, "Referral"),
                _buildDrawerItem(Icons.info_outline, "About Us"),
                _buildDrawerItem(Icons.settings_outlined, "Settings"),
                _buildDrawerItem(Icons.help_outline, "Help and Support"),
                _buildDrawerItem(Icons.logout, "Logout"),
              ],
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildDrawerItem(IconData icon, String title) {
    return ListTile(
      leading: Icon(icon, color: Colors.grey[700], size: 24),
      title: Text(
        title,
        style: const TextStyle(fontSize: 16, fontWeight: FontWeight.w400),
      ),
      onTap: () {
        // Add navigation logic here
      },
      contentPadding: const EdgeInsets.symmetric(horizontal: 25, vertical: 5),
      visualDensity: const VisualDensity(vertical: -1), // Makes list more compact
    );
  }
}